
@{
    ViewData["Title"] = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:10px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">
                Hsitorial de Invenatario
            </h2>
        </div>
    </div>

    <div class="p-4 border rounded" style="margin-top:15px">
        <table id="tblHistorialInv" class="table table-striped table-bordered pt-3" style="width:100%">
            <thead>
                <tr class="table-info table-dark">
                    <th class="text-center">Fecha Inicio</th>
                    <th class="text-center">Fecha Fin</th>
                    <th class="text-center">Bodega</th>
