@model IEnumerable<SistemaInventario.Modelos.InventarioDetalle>
@{
    ViewData["Title"] = "DetalleHistorial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
     <div class="col-6">
         <h2 class="text-primary">Detalle Hsitorial de Inventario</h2>
     </div>
</div>

<div>
    <table class="table table-striped table-bordered pt-3 mt-3">
        <thead>
           <tr class="table-info table-dark">
               <th class="text-center">Producto</th>
               <th class="text-center">Marca</th>
               <th class="text-end">Costo</th>
               <th class="text-end">Stock Anterior</th>
               <th class="text-end">Cantidad</th>
           </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="font-size:14px;text-align:center">
                    @Html.DisplayFor(d => item.Producto.Descripcion)
                </td>
                <td style="font-size:14px;text-align:center">
                    @Html.DisplayFor(d => item.Producto.Marca.Nombre)
                </td>
                <td style="font-size:14px;text-align:right">
                    @Html.DisplayFor(d => item.Producto.Costo)
                </td>
                <td style="font-size:14px; text-align:right">
                    @Html.DisplayFor(d => item.StockAnterior)
                </td>
                <td style="font-size:14px; text-align:right; color:blue;font-weight:bold">
                    @Html.DisplayFor(d => item.Cantidad)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-6 p-2">
    <a class="btn btn-success" asp-action="Historial">
        <i class="fas fa-arrow-circle-left" style="margin-right:4px"></i>Regresar
    </a>

</div>