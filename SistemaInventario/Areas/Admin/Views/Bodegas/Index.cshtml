
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:10px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">
                   Lista de Bodegas
            </h2>
        </div>
        <div class="col-6">
            <button class="btn float-end" style="background:#008cba; border-radius:5px"><i class="fas fa-plus"></i> Crear Nueva Bodega</button>
        </div>
    </div>

    <div  class="p-4 border rounded" style="margin-top:15px">
        <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-info table-dark">
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Descripcion</th>
                    <th class="text-center">Estado</th>
                    <th></th>
               </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/bodega.js"></script>
}


