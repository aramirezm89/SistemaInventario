
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border p-3">
    <div class="d-lg-flex justify-content-between mb-3" >
        <div class="p-2">
            <h2 class="text-primary">Lista de Ordenes</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Orden" asp-action="Index" asp-route-estado="pendiente">Pendientes</a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Orden" asp-action="Index" asp-route-estado="aprobado">Aprobados</a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Orden" asp-action="Index" asp-route-estado="completado">Completados</a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Orden" asp-action="Index" asp-route-estado="rechazado">Rechazados</a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Orden" asp-action="Index" asp-route-estado="todas">Todas</a>
                </li>
            </ul>
        </div>
    </div>
    <table class="mt-3 table table-striped table-bordered pt-3" id="tblData" style="width:100%">
        <thead>
            <tr class="table-info table-dark">
                <th>Id</th>
                <th>Cliente</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Monto</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 

<script src="~/js/orden.js"></script>
}